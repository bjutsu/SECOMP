<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.secomp.secomphoteis.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/txt_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite dois numeros e saiba a media"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.085"
        android:textSize="32sp"
        android:layout_marginTop="81dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/edt_num2"
        android:layout_alignStart="@+id/edt_num2" />

    <Button
        android:id="@+id/btn_calcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="358dp"
        android:layout_marginTop="81dp"
        android:layout_below="@+id/edt_num1"
        android:layout_alignLeft="@+id/edt_num1"
        android:layout_alignStart="@+id/edt_num1"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp" />

    <Button
        android:id="@+id/btn_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mudar Act"
        tools:layout_editor_absoluteX="184dp"
        tools:layout_editor_absoluteY="358dp"
        android:layout_alignBaseline="@+id/btn_calcular"
        android:layout_alignBottom="@+id/btn_calcular"
        android:layout_toRightOf="@+id/edt_num1"
        android:layout_toEndOf="@+id/edt_num1" />

    <EditText
        android:id="@+id/edt_num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="109dp"
        android:layout_below="@+id/edt_num2"
        android:layout_alignLeft="@+id/edt_num2"
        android:layout_alignStart="@+id/edt_num2"
        android:layout_marginTop="45dp" />

    <EditText
        android:id="@+id/edt_num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="176dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_below="@+id/txt_main"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_cont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_second"
        android:layout_alignEnd="@+id/btn_second"
        android:layout_alignRight="@+id/btn_second"
        android:layout_marginBottom="15dp"
        android:text="Container" />

</RelativeLayout>
